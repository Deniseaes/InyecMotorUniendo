<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBarLayout para la Toolbar fija -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue_color"
            android:elevation="4dp"
            android:theme="?attr/actionBarTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:navigationIcon="@drawable/ic_back_arrow" />
    </com.google.android.material.appbar.AppBarLayout>

        <!-- Contenedor para el contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/hello_world_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear Vehiculo"
                android:textSize="24sp" />

            <!-- Marca -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Marca:"
                android:layout_gravity="center_vertical"/>

            <Spinner
                android:id="@+id/spinnerMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <!-- Modelo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Modelo:"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese el modelo"
                android:inputType="text"
                android:layout_marginBottom="16dp"/>

            <!-- Año -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Año:"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etAnio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese el año"
                android:inputType="number"
                android:layout_marginBottom="16dp"/>

            <!-- Motor Litros -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Litros del Motor:"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etMotorLitros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: 1.6"
                android:inputType="numberDecimal"
                android:layout_marginBottom="16dp"/>

            <!-- Tipo Motor -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Tipo de Motor:"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp"/>

            <Spinner
                android:id="@+id/spinnerMotorTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnGuardarModelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyButtonCreateStyle"
                android:text="Crear Vehículo"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
