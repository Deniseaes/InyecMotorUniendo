<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: "
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del Producto"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Código: "
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/etCodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Código del Producto" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio Costo: "
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/etPrecioCosto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio Costo"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio Venta: "
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/etPrecioVenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio Venta"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Actual: "
                android:layout_gravity="center_vertical"/>

            <!-- Botón de decrementar (-) para Stock Actual -->
            <Button
                android:id="@+id/btnDecrementarStockActual"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="-" />

            <EditText
                android:id="@+id/etStockActual"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Stock Actual"
                android:inputType="number"/>

            <!-- Botón de incrementar (+) para Stock Actual -->
            <Button
                android:id="@+id/btnIncrementarStockActual"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="+"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Máximo: "
                android:layout_gravity="center_vertical"/>
            <!-- Botón de decrementar (-) para Stock Máximo -->
            <Button
                android:id="@+id/btnDecrementarStockMax"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="-"
                />

            <EditText
                android:id="@+id/etStockMax"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Stock Máximo"
                android:inputType="number"/>

            <!-- Botón de incrementar (+) para Stock Máximo -->
            <Button
                android:id="@+id/btnIncrementarStockMax"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="+"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Mínimo: "
                android:layout_gravity="center_vertical"/>
            <!-- Botón de decrementar (-) para Stock Mínimo -->
            <Button
                android:id="@+id/btnDecrementarStockMin"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="-"
                />
            <EditText
                android:id="@+id/etStockMin"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Stock Mínimo"
                android:inputType="number"/>
            <!-- Botón de incrementar (+) para Stock Mínimo -->
            <Button
                android:id="@+id/btnIncrementarStockMin"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="+"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
